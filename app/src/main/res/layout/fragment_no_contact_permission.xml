<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_marginBottom="@dimen/activity_vertical_margin"
              android:layout_marginLeft="@dimen/fragment_no_contact_permission_horizontal_margin"
              android:layout_marginRight="@dimen/fragment_no_contact_permission_horizontal_margin"
              android:layout_marginTop="@dimen/activity_vertical_margin"
              android:background="@drawable/border_round_corners"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="org.simlar.widgets.NoContactPermissionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/no_contact_permission_fragment_title"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:text="@string/no_contact_permission_fragment_open_settings_text"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonSettings"
            style="@style/buttonWhiteWithIcon"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/button_request_contacts_permission"
            android:text="@string/no_contact_permission_fragment_open_settings_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="center_horizontal"
            android:text="@string/no_contact_permission_fragment_call_contact_text"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonCallContact"
            style="@style/buttonWhiteWithIcon"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/button_call_contact"
            android:text="@string/no_contact_permission_fragment_call_contact_button"/>
    </LinearLayout>

</LinearLayout>
